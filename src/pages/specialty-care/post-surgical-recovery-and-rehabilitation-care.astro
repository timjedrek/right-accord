---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Post Surgical/Recovery Care | RIGHT ACCORD Private Duty Home Health Care',
};
// Schema data for Post-Surgical Recovery Care page
const schemaData = {
  page: {
    type: 'specialty',
    title: 'Post Surgical/Recovery Care | RIGHT ACCORD Private Duty Home Health Care',
    description: 'Explore professional post-surgical recovery and rehabilitation care services for safe and effective healing at home.',
    url: 'https://rightaccordhealth.com/specialty-care/post-surgical-recovery-and-rehabilitation-care'
  },
  medicalProcedure: {
    name: 'Post-Surgical Recovery Care',
    description: 'Professional post-surgical care and rehabilitation services for safe recovery at home.',
    procedureType: 'Recovery Services',
    provider: {
      name: 'RIGHT ACCORD Home Health Care',
      url: 'https://rightaccordhealth.com'
    },
    medicalCondition: {
      name: 'Post-Surgical Recovery',
      description: 'Professional post-surgical care and rehabilitation services for safe recovery at home.',
      possibleTreatment: [
        'Post-Surgical Care',
        'Wound Care',
        'Recovery Support'
      ]
    }
  }
};


import HeroImage from '~/assets/images/right-accord-health-florida-HOMEPAGE_POSTSURGICAL.jpg';
import HomeCareImage from '~/assets/images/sub-image1_post-surgery.jpg';
---

<Layout metadata={metadata} schemaData={schemaData}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Post Surgical/Recovery Care"
    title="Post Surgical/Recovery or Rehabilitation Care"
    subtitle="Thereâ€™s no doubt, home is the best place to be especially when recuperating after hospitalization or after surgery. However, According to the Medicare payment advisory committee, almost 1 in 5 Medicare patients will be readmitted to the within 30 days of discharge."
    actions={[
      {
        variant: 'primary',
        text: 'Schedule Appointment',
        href: 'https://forms.rightaccordhealthcare.com/schedule',
        icon: 'tabler:calendar-heart',
        target: '_blank',
      },
      { text: 'Contact Us', href: '/contact', target: '_blank' },
    ]}
    image={{
      src: HeroImage,
      alt: 'right-accord-health-florida-HOMEPAGE_POSTSURGICAL',
    }}
  />

  <!-- Features Widget *************** -->

  <div
    id="learn-more"
    class="max-w-7xl mx-auto text-xl gap-5 leading-relaxed mb-10 p-5 flex flex-col mt-10 scroll-m-24"
  >
    <h2 class="font-semibold text-2xl mt-10 bg-main-blue text-white w-fit p-3">
      How in-home care can help after hospital discharge?
    </h2>

    <div class="flex flex-col lg:flex-row items-center lg:items-start gap-5">
      <div>
        <ItemGrid
          items={[
            {
              title: 'Reduce incidence of hospital readmission',
            },
            {
              title: 'Coordinating discharge and following discharge recommendation',
            },
            {
              title: 'Reduce the incidence of falls in the home',
            },
            {
              title: 'Transportation from the hospital',
            },
            {
              title: 'Coordinating medical equipment delivery',
            },
            {
              title: 'Monitoring exercise and activities prescribed',
            },
            {
              title: 'Scheduling transport and follow up appointments',
            },
            {
              title: 'Reviewing medication and reminders',
            },
            {
              title: 'Assistance with food shopping and Preparing meals',
            },
            {
              title: 'Responding to any health concerns and reporting if anything significant',
            },
          ]}
          columns={1}
          defaultIcon="tabler:check"
          classes={{
            container: 'gap-y-1 md:gap-y-1',
            panel: 'max-w-none',
            title: 'lg:text-lg font-normal dark:text-slate-400 leading-6 ml-2 rtl:ml-0 rtl:mr-2',
            description: '',
            icon: 'flex h-4 w-4 items-center justify-center rounded-full bg-green-600 dark:bg-green-700 text-gray-50 p-1 mt-1',
            action: 'text-lg font-medium leading-6 dark:text-white ml-2 rtl:ml-0 rtl:mr-2',
          }}
        />
      </div>

      <Image
        class="mx-auto rounded-md"
        widths={[400, 768, 1024, 2040]}
        sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
        loading="eager"
        width={600}
        height={400}
        src={HomeCareImage}
        alt="Long Term Care Insurance"
      />
    </div>

    <h2 class="font-semibold text-2xl mt-10 bg-main-blue text-white w-fit p-3">
      RIGHT ACCORD's A-team of home health aide and nursing assistants can help after hospitalization and surgery by:
    </h2>

    <ItemGrid
      items={[
        {
          title: 'Assisting with self-care',
        },
        {
          title: 'Following plan of care',
        },
        {
          title: 'Assisting with personal care and activities of daily living (bathing, dressing, grooming, toileting)',
        },
        {
          title: 'Assisting with range of motion (ROM) exercises and ambulation',
        },
        {
          title: 'Transferring from bed to chair or wheelchair',
        },
        {
          title: 'Taking vital signs (temperature, pulse, respiration and blood pressure)',
        },
        {
          title: 'Assessment of pain and reminding about medications',
        },
        {
          title: 'Assist with use of medical assistive devices such as walkers, cane, crutches',
        },
        {
          title: 'Assist with light housekeeping',
        },
        {
          title: 'Prepare meals',
        },
        {
          title: 'And more',
        },
      ]}
      columns={2}
      defaultIcon="tabler:check"
      classes={{
        container: 'gap-y-1 md:gap-y-1',
        panel: 'max-w-none',
        title: 'lg:text-lg font-normal dark:text-slate-400 leading-6 ml-2 rtl:ml-0 rtl:mr-2',
        description: '',
        icon: 'flex h-4 w-4 items-center justify-center rounded-full bg-green-600 dark:bg-green-700 text-gray-50 p-1 mt-1',
        action: 'text-lg font-medium leading-6 dark:text-white ml-2 rtl:ml-0 rtl:mr-2',
      }}
    />
  </div>
</Layout>
