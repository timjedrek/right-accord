---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Parkinsons Disease In-Home Care | RIGHT ACCORD Private Duty Home Health Care',
  description:
    "Specialized Parkinson's disease care services in Florida. Expert movement assistance, medication management, and daily living support from certified caregivers.",
};

// Schema data for Parkinson's Disease Care page
const schemaData = {
  page: {
    type: 'specialty' as const,
    title: "Parkinson's Disease Care",
    description: "Specialized care and support for individuals living with Parkinson's disease.",
    url: 'https://rightaccordhealth.com/specialty-care/parkinsons-disease-care',
  },
  medicalProcedure: {
    name: "Parkinson's Disease Care",
    description: "Specialized care and support for individuals living with Parkinson's disease.",
    procedureType: 'Neurological Care Services',
    provider: {
      name: 'RIGHT ACCORD Home Health Care',
      url: 'https://rightaccordhealth.com',
    },
    medicalCondition: {
      name: "Parkinson's Disease",
      description: "Specialized care and support for individuals living with Parkinson's disease.",
      possibleTreatment: ["Parkinson's Care", 'Movement Assistance', 'Medication Management'],
    },
  },
};

import HeroImage from '~/assets/images/right-accord-health-florida-HOMEPAGE_PARKINSONS.jpg';
import HomeCareImage from '~/assets/images/sub-image1_parkinsons-care.jpg';
---

<Layout metadata={metadata} schemaData={schemaData}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Parkinson's Disease in-Home Care"
    title="What is Parkinsons Disease?"
    subtitle="Parkinson’s Disease is a slow, progressive, debilitating disease where sections of the brain degenerate causing the muscles to become stiff. It can cause stoop posture and shuffling gait or walk."
    actions={[
      {
        variant: 'primary',
        text: 'Schedule Appointment',
        href: 'https://forms.rightaccordhealthcare.com/schedule',
        icon: 'tabler:calendar-heart',
        target: '_blank',
      },
      { text: 'Contact Us', href: '/contact', target: '_blank' },
    ]}
    image={{
      src: HeroImage,
      alt: 'right-accord-health-florida-HOMEPAGE_PARKINSONS',
    }}
  />

  <!-- Features Widget *************** -->

  <div
    id="learn-more"
    class="max-w-7xl mx-auto text-xl gap-5 leading-relaxed mb-10 p-5 flex flex-col mt-10 scroll-m-24"
  >
    <h2 class="font-semibold text-2xl mt-10 bg-main-blue text-white w-fit p-3">
      How home care can help elderly with parkinson disease?
    </h2>

    <p>Home Care helps elderly with Parkinson's disease through the following:</p>

    <div class="flex flex-col lg:flex-row items-center lg:items-start gap-5">
      <div>
        <ItemGrid
          items={[
            {
              title: 'Protect clients from any unsafe areas and conditions',
            },
            {
              title: 'Prevent falls. Seniors with Parkinsons are high risk for falls',
            },
            {
              title: 'Assist with personal care and activities of daily living',
            },
            {
              title: 'Assist with range of motion exercises to prevent contractures',
            },
            {
              title: 'Ambulate with assistance to help strengthen muscles',
            },
            {
              title: 'Encourage independence and self-care',
            },
            {
              title: 'Assist with housekeeping duties',
            },
            {
              title: 'Give emotional support',
            },
            {
              title: 'Promote client’ health and comfort',
            },
            {
              title: 'Maintain client’s dignity and self-worth',
            },
          ]}
          columns={1}
          defaultIcon="tabler:check"
          classes={{
            container: 'gap-y-1 md:gap-y-1',
            panel: 'max-w-none',
            title: 'lg:text-lg font-normal dark:text-slate-400 leading-6 ml-2 rtl:ml-0 rtl:mr-2',
            description: '',
            icon: 'flex h-4 w-4 items-center justify-center rounded-full bg-green-600 dark:bg-green-700 text-gray-50 p-1 mt-1',
            action: 'text-lg font-medium leading-6 dark:text-white ml-2 rtl:ml-0 rtl:mr-2',
          }}
        />
      </div>

      <Image
        class="mx-auto rounded-md"
        widths={[400, 768, 1024, 2040]}
        sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
        loading="eager"
        width={600}
        height={400}
        src={HomeCareImage}
        alt="Long Term Care Insurance"
      />
    </div>

    <h2 class="font-semibold text-2xl mt-10 bg-main-blue text-white w-fit p-3">
      Our team of certified caregivers specialize in parkinson’s care:
    </h2>

    <p>They are:</p>

    <ItemGrid
      items={[
        {
          title: 'Helpful to seniors with rigidity and tremors and give them opportunity to show what they can do',
        },
        {
          title: 'Do not take over just because they can do it faster or better',
        },
        {
          title: 'Allow seniors with sense of independence and self-worth',
        },
        {
          title: 'Do not push the elderly beyond his or her abilities',
        },
        {
          title: 'Understand communication when there is speech or swallowing impairment',
        },
        {
          title: 'Observe safety and proper body mechanics when assisting',
        },
        {
          title: 'Ensure safe and comfortable transfers, ambulation and body mechanics',
        },
        {
          title: 'Assisting with Personal Care and Activities of Daily Living (ADL)',
        },
        {
          title: 'Homemaking and Companionship',
        },
      ]}
      columns={1}
      defaultIcon="tabler:check"
      classes={{
        container: 'gap-y-1 md:gap-y-1',
        panel: 'max-w-none',
        title: 'lg:text-lg font-normal dark:text-slate-400 leading-6 ml-2 rtl:ml-0 rtl:mr-2',
        description: '',
        icon: 'flex h-4 w-4 items-center justify-center rounded-full bg-green-600 dark:bg-green-700 text-gray-50 p-1 mt-1',
        action: 'text-lg font-medium leading-6 dark:text-white ml-2 rtl:ml-0 rtl:mr-2',
      }}
    />

    <p>
      RIGHT ACCORD takes pride in providing continuing education of our A-Team of caregivers. Parkinson Disease clients
      require unique skill and training. Our caregivers attend a special 8-hour training to understand Parkinson and
      develop skills that can be applied to seniors with Parkinson Disease.
    </p>
  </div>
</Layout>
