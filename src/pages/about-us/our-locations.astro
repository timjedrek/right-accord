---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import HeroImage from '~/assets/images/main-image_our-mission.jpg';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Our Locations',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Our Mission"
    title="One of Sarasota's Top In-Home Senior Care Provider"
    subtitle="The RIGHT ACCORD mission is a commitment to help the seniors in our community to age gracefully. We ensure them of their dignity, security and social connections that will enhance their lives."
    actions={[
      {
        variant: 'primary',
        text: 'Schedule Appointment',
        href: 'https://forms.rightaccordhealthcare.com/schedule',
        icon: 'tabler:calendar-heart',
        target: '_blank',
      },
      { text: 'Contact Us', href: '/contact', target: '_blank' },
    ]}
    image={{
      src: HeroImage,
      alt: 'Store with a Coming Soon sign. Pre-launch Landing Page',
    }}
  />
  <Features2
    id="locations"
    title="RIGHT ACCORD Locations"
    tagline="Select a City to Explore Our Services"
    columns={3}
    items={[
      {
        title: 'Sarasota',
        description: '3900 Clark Road Suite B5 <br> Sarasota, FL 34233',
        icon: 'tabler:map-pin',
        callToAction: {
          variant: 'secondary',
          text: 'Explore',
          href: '/about-us/sarasota',
        },
        classes: {
          panel: 'bg-slate-200 flex flex-col justify-between items-center align-center',
          title: 'text-slate-700 text-2xl lg:text-3xl font-black m-0 p-0 uppercase dark:text-white',
          description:
            'text-slate-600 tracking-tighter font-bold text-md lg:text-lg uppercase dark:text-white text-center',
          icon: 'text-slate-700 dark:text-white',
        },
      },
      {
        title: 'Venice',
        description: '1872 S Tamiami Trail Suite A <br> Venice, FL 34293',
        icon: 'tabler:map-pin',
        callToAction: {
          variant: 'secondary',
          text: 'Explore',
          href: '/about-us/venice',
        },
        classes: {
          panel: 'bg-slate-200 flex flex-col justify-between items-center align-center',
          title: 'text-slate-700 text-2xl lg:text-3xl font-black m-0 p-0 uppercase dark:text-white',
          description:
            'text-slate-600 tracking-tighter font-bold text-lg lg:text-xl uppercase dark:text-white text-center',
          icon: 'text-slate-700 dark:text-white',
        },
      },
      {
        title: 'Lakewood Ranch',
        description: '9040 Town Ceâ€‹nter Parkway <br> Lakewood Ranch, FL 34202',
        icon: 'tabler:map-pin',
        callToAction: {
          variant: 'secondary',
          text: 'Explore',
          href: '/about-us/lakewood-ranch',
        },
        classes: {
          panel: 'bg-slate-200 flex flex-col justify-between items-center align-center',
          title: 'text-slate-700 text-2xl lg:text-3xl font-black m-0 p-0 uppercase dark:text-white',
          description:
            'text-slate-600 tracking-tighter font-bold text-lg lg:text-xl uppercase dark:text-white text-center',
          icon: 'text-slate-700 dark:text-white',
        },
      },
    ]}
  />
</Layout>
