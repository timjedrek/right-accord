---
import Layout from '~/layouts/PageLayout.astro';
import Jobs from '~/components/widgets/Jobs.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Lead Generation Landing Page Demo',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Application for Employment"
    title="How to Apply?"
    subtitle="Before applying, please read the relevant job description to ensure you hold all the required qualifications to pursue this employment."
    actions={[
      { variant: 'primary', text: 'Apply Here', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn more', href: '#' },
    ]}
  />

  <Jobs items={[
    {
      title: 'Certified Nursing Assistant (CNA) - Job Description',
      description:
        'Certified Nursing Assistants (CNA) are designated to work within a home environment providing hands-on personal care assistance with an established plan of care. Live-in Caregivers are CNA’s who work and live in the home. CNA’s cannot administer medications of any kind, although they can remind the patient / client to take medications.',
      icon: 'tabler:template',
    },
    {
      title: 'Home Health Aides (HHA) - Job Description',
      description:
        'Home Health Aides (HHA) are designated to work within a home environment providing hands-on personal care assistance with an established plan of care. Live-in Caregivers are HHA’ who work and live in the home. HHA’s cannot administer medications of any kind, although they can remind the patient / client to take medications.',
      icon: 'tabler:template',
    },
    {
      title: 'Homemaker/Companion - Job Description',
      description:
        'A homemaker/companion provides a safe and clean environment for the client within a home environment.',
      icon: 'tabler:template',
    },
  ]}></Jobs>

  <CallToAction
    title="Coming soon"
    subtitle="We are working on the content of these demo pages. You will see them very soon. Stay tuned Stay tuned!"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
