---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';

const metadata = {
  title: 'Click-through Landing Page Demo',
};
// Schema data for caregiver-resources page
const schemaData = {
  page: {
    type: 'service',
    title: '',
    description: '',
    url: 'https://rightaccordhealth.com/caregivers/caregiver-resources'
  }
};


const documents = [
  {
    title:
      'Identification including drive’ s license, social security card, birth certificate, or official form of identification to prove who you are',
  },
  {
    title: 'Proof of legal status in this country and proof that you are legally able to work',
  },
  {
    title:
      'Name of school or program Diploma or certificate from home health aide training course and copy of CNA license',
  },
  {
    title: 'Names, titles, addresses and phone numbers of previous employers or clients',
  },
  {
    title: 'Copies of Continuing Education Certifications',
  },
  {
    title: 'Days and hours available to work',
  },
  {
    title: 'Brief statement why you want to work as a home health aide and client preferences',
  },
];

const competences = [
  {
    title: 'Dress neatly and appropriately',
  },
  {
    title: 'Shower or bathe and use deodorant',
  },
  {
    title: 'Wash your hands with clean well filed nails no more than medium length or shorter',
  },
  {
    title: 'Men caregiver should shave before interview',
  },
  {
    title: 'Do not smoke before interview',
  },
  {
    title: 'Do not wear perfume or cologne. Many people are sensitive or allergic to scents',
  },
  {
    title: 'Wear simple make up and jewelry',
  },
  {
    title: 'Wear hair in a simple and tidy style',
  },
  {
    title: 'Wear nice pair of pants, skirt or dress. Make sure they are not wrinkled to too short. No short pants',
  },
  {
    title: 'Make sure your shoes are clean and polished',
  },
  {
    title: 'Arrive 10-15 minutes early. Find the location ahead of time',
  },
  {
    title: 'Introduce yourself wit a smile and shake hands',
  },
  {
    title: 'Answer questions clearly and completely',
  },
  {
    title: 'Make eye contact to show your are sincere',
  },
  {
    title: 'Avoid using slang words',
  },
  {
    title: 'Never eat, drink, or chew during an interview',
  },
  {
    title: 'Sit up or stand up straight and look happy',
  },
  {
    title: 'Do not bring friends or children',
  },
  {
    title: 'Do not use cell phones and best turn off your cell phone',
  },
  {
    title: 'Relax and Be Confident',
  },
];

const questions = [
  {
    title: 'Why did you become a home health aide?',
  },
  {
    title: 'What do you like about working as a home health aide?',
  },
  {
    title: 'What do you not like working as a home health aide?',
  },
  {
    title: 'For first time home health aide, what are your expectations for this job?',
  },
  {
    title: 'What are you good at? Your strengths and your weaknesses?',
  },
  {
    title: 'Why did you leave your last job?',
  },
  {
    title: 'What kind of clients do you prefer to work?',
