import HeroImage from '~/assets/images/image_caregiver-resources2.jpg';
---

<Layout metadata={metadata} schemaData={schemaData}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Caregiver Resources"
    title="Essential Documents and Interview Tips for Job Applicants"
    subtitle="Equipping you with vital documents, expert advice, and field-tested strategies to land your ideal job, foster change in home health care, and navigate interviews with poise and precision"
    actions={[
      { variant: 'primary', text: 'Call to Action', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn more', href: '#' },
    ]}
    image={{
      src: HeroImage,
      alt: 'Click-through Landing Page Hero Image',
    }}
  />
  <div
    id="continuing-education"
    class="max-w-6xl mx-auto text-xl flex flex-col gap-5 leading-relaxed mb-10 p-5 scroll-m-24"
  >
    <h2 class="text-3xl font-bold leading-9 dark:text-white">Documents required when applying for a job:</h2>
    <ItemGrid
      items={documents}
      columns={1}
      defaultIcon="tabler:check"
      classes={{
        container: 'gap-y-1 md:gap-y-1',
        panel: 'max-w-none',
        title: 'lg:text-base font-medium text-muted dark:text-slate-400 leading-6 ml-2 rtl:ml-0 rtl:mr-2',
        description: '',
        icon: 'flex h-4 w-4 items-center justify-center rounded-full bg-green-600 dark:bg-green-700 text-gray-50 p-1 mt-1',
        action: 'text-lg font-medium leading-6 dark:text-white ml-2 rtl:ml-0 rtl:mr-2',
      }}
    />
    <h2 class="text-3xl font-bold leading-9 dark:text-white mt-5">
      Competence in job interview process. Be professional and do the following:
    </h2>
    <ItemGrid
      items={competences}
      columns={2}
      defaultIcon="tabler:check"
      classes={{
        container: 'gap-y-1 md:gap-y-1',
        panel: 'max-w-none',
        title: 'lg:text-base font-medium text-muted dark:text-slate-400 leading-6 ml-2 rtl:ml-0 rtl:mr-2',
        description: '',
        icon: 'flex h-4 w-4 items-center justify-center rounded-full bg-green-600 dark:bg-green-700 text-gray-50 p-1 mt-1',
        action: 'text-lg font-medium leading-6 dark:text-white ml-2 rtl:ml-0 rtl:mr-2',
      }}
    />
    <h2 class="text-3xl font-bold leading-9 dark:text-white mt-5">
      Here are some sample questions asked during an interview:
    </h2>
    <ItemGrid
      items={questions}
      columns={1}
      defaultIcon="tabler:check"
      classes={{
        container: 'gap-y-1 md:gap-y-1',
        panel: 'max-w-none',
        title: 'lg:text-base font-medium text-muted dark:text-slate-400 leading-6 ml-2 rtl:ml-0 rtl:mr-2',
        description: '',
        icon: 'flex h-4 w-4 items-center justify-center rounded-full bg-green-600 dark:bg-green-700 text-gray-50 p-1 mt-1',
        action: 'text-lg font-medium leading-6 dark:text-white ml-2 rtl:ml-0 rtl:mr-2',
      }}
    />
    <h2 class="text-3xl font-bold leading-9 dark:text-white mt-5">Our corporate social responsibility</h2>
    <p class="lg:text-base font-medium text-muted dark:text-slate-400 leading-6">
      RIGHT ACCORD Home Health Care is one with the <a
        href="https://www.mesotheliomahope.com/"
        class="text-cyan-600 hover:text-cyan-700"
        target="_blank">Mesothelioma Hope</a
      >, a health support organization for terminally ill cancer patients and their loved ones. And also to
      <a href="https://www.mesotheliomalawyercenter.org/" class="text-cyan-600 hover:text-cyan-700" target="_blank"
        >MesotheliomaLawyerCenter.org</a
      >, who aside from providing people with comprehensive mesothelioma cancer information, also help asbestos victims
      recover money for medical treatment and other expenses. Together, we share our desire to provide hope to the
      hopeless and support grief-stricken families.
    </p>
  </div>
</Layout>
