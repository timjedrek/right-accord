---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />
  
  <!-- GHL CONTACT US -->
  <div class="pb-10">
    <iframe
    src="https://api.leadconnectorhq.com/widget/form/b8VLyZyGE1Eh1s10bqss"
    style="width:100%;height:100%;border:none;border-radius:3px"
    id="inline-b8VLyZyGE1Eh1s10bqss" 
    data-layout="{'id':'INLINE'}"
    data-trigger-type="alwaysShow"
    data-trigger-value=""
    data-activation-type="alwaysActivated"
    data-activation-value=""
    data-deactivation-type="neverDeactivate"
    data-deactivation-value=""
    data-form-name="Contact Us Form"
    data-height="680"
    data-layout-iframe-id="inline-b8VLyZyGE1Eh1s10bqss"
    data-form-id="b8VLyZyGE1Eh1s10bqss"
    title="Contact Us Form"
        >
    </iframe>
    <script src="https://link.msgsndr.com/js/form_embed.js"></script>
  </div>

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'Phone',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '1234 Lorem Ipsum St, 12345, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
