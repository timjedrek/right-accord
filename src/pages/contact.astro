---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';

import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Us | RIGHT ACCORD Health',
};
// Schema data for Contact RIGHT ACCORD Home Health Care
const schemaData = {
  page: {
    type: 'contact' as const,
    title: 'Contact RIGHT ACCORD Home Health Care',
    description: 'Contact RIGHT ACCORD for home health care services in Florida. Call us or schedule a consultation.',
    url: 'https://rightaccordhealth.com/contact',
  },
  organization: {
    name: 'RIGHT ACCORD Home Health Care',
    telephone: '+1-941-366-0801',
    email: 'info@rightaccordhealth.com',
    url: 'https://rightaccordhealth.com',
    areaServed: ['Sarasota', 'Bradenton', 'Venice', 'North Port', 'Fort Myers', 'Cape Coral'],
    address: {
      streetAddress: '1337 Fruitville Road',
      addressLocality: 'Sarasota',
      addressRegion: 'FL',
      postalCode: '34236',
      addressCountry: 'US',
    },
  },
};
---

<Layout metadata={metadata} schemaData={schemaData}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <!-- GHL CONTACT US -->
  <div class="pb-10 -z-10">
    <iframe
      src="https://api.leadconnectorhq.com/widget/form/b8VLyZyGE1Eh1s10bqss"
      style="width:100%;height:100%;border:none;border-radius:3px"
      id="inline-b8VLyZyGE1Eh1s10bqss"
      data-layout="{'id':'INLINE'}"
      data-trigger-type="alwaysShow"
      data-trigger-value=""
      data-activation-type="alwaysActivated"
      data-activation-value=""
      data-deactivation-type="neverDeactivate"
      data-deactivation-value=""
      data-form-name="Contact Us Form"
      data-height="680"
      data-layout-iframe-id="inline-b8VLyZyGE1Eh1s10bqss"
      data-form-id="b8VLyZyGE1Eh1s10bqss"
      title="Contact Us Form"
    >
    </iframe>
    <script src="https://link.msgsndr.com/js/form_embed.js"></script>
  </div>

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'Phone',
        description: '+1 (941) 366-0801',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'admin@rightaccordhealth.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '3900 Clark Road Suite B5, Sarasota, FL 34233',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
