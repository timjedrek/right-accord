  {
    title: 'Obtain specimens (urine, stool or sputum) as necessary',
  },
  {
    title: 'Take Vital Signs (Blood Pressure, Pulse, Respiration, Temperature) as required',
  },
];

const companionship = [
  {
    title: 'Medication Reminders & Assistance',
  },
  {
    title: 'Grocery Shopping',
  },
  {
    title: 'Meal Preparation',
  },
  {
    title: 'Light Housekeeping (vacuuming, dusting, wash dishes)',
  },
  {
    title: 'Bed making',
  },
  {
    title: 'Appointment Scheduling',
  },
  {
    title: 'Transportation to Appointments',
  },
  {
